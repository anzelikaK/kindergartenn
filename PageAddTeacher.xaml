<Page x:Class="kindergarten.PageMain.PageAddTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kindergarten.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddTeacher">

    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Фамилия" Grid.Row="0" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Имя" Grid.Row="1" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Отчество" Grid.Row="2" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Специальность" Grid.Row="3" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Почта" Grid.Row="4" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Номер телефона" Grid.Row="5" Style="{StaticResource TextBlock}"/>
        <TextBlock Text="Образование" Grid.Row="6" Style="{StaticResource TextBlock}"/>

        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Surname}"/>
        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding NameTeacher}"/>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Patronymic}"/>
        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Speciality}"/>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Email}"/>
        <TextBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Number}"/>
        <TextBox Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Style="{StaticResource TextBox}" Text="{Binding Education}"/>
        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Сохранить" Name="btnSave" Click="btnSave_Click" Style="{StaticResource ButtonL}"/>
        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Назад" Name="btnExit" Click="btnExit_Click" Margin="0,0,310,0" Style="{StaticResource ButtonD}"/>

    </Grid>
</Page>
