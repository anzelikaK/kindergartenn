<Page x:Class="kindergarten.PageMain.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kindergarten.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="#FF9EC480">
        <Border BorderBrush="#FF1976D2" BorderThickness="1" CornerRadius="10" 
                    Background="White" Width="350" Height="250" 
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="Black"/>

                <TextBlock Text="Логин:" Margin="0 5 0 0"/>
                <TextBox x:Name="txtLogin" Margin="0 0 0 10"/>

                <TextBlock Text="Пароль:" Margin="0 5 0 0"/>
                <PasswordBox x:Name="txtPassword" Margin="0 0 0 20"/>

                <Button Content="Войти" Click="Button_Click" Background="#FFFFDE5E" 
                            Foreground="Black" Padding="10 5" FontWeight="Bold"/>

                <TextBlock x:Name="txtError" Foreground="Red" TextWrapping="Wrap" 
                               Margin="0 10 0 0" Visibility="Collapsed" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
